# üê≥ –û–ø—Ç–∏–º–∏–∑–∏—Ä–æ–≤–∞–Ω–Ω—ã–π Dockerfile –¥–ª—è React Frontend - v2.0
# –ë—ã—Å—Ç—Ä–∞—è —Å–±–æ—Ä–∫–∞ —Å –∫–µ—à–∏—Ä–æ–≤–∞–Ω–∏–µ–º –∏ –æ–ø—Ç–∏–º–∏–∑–∞—Ü–∏—è–º–∏

# ================================
# Stage 1: Dependencies Cache
# ================================
FROM node:20-alpine AS deps

# –£—Å—Ç–∞–Ω–æ–≤–∫–∞ —Å–∏—Å—Ç–µ–º–Ω—ã—Ö –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π
RUN apk add --no-cache git python3 make g++

# –†–∞–±–æ—á–∞—è –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—è
WORKDIR /app

# –ö–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ package files
COPY apps/DXB-frontend-develop/package.json apps/DXB-frontend-develop/yarn.lock* ./

# –ù–∞—Å—Ç—Ä–æ–π–∫–∞ npm –¥–ª—è —Å–∫–æ—Ä–æ—Å—Ç–∏
RUN npm config set registry https://registry.npmjs.org/ \
    && npm config set timeout 180000 \
    && npm config set prefer-offline true \
    && npm config set progress false

# –£—Å—Ç–∞–Ω–æ–≤–∫–∞ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π —Å –∫–µ—à–∏—Ä–æ–≤–∞–Ω–∏–µ–º
RUN npm install --legacy-peer-deps --prefer-offline --no-audit --no-fund \
    && npm cache clean --force

# ================================
# Stage 2: Build
# ================================
FROM deps AS builder

# –ö–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π –∏–∑ –ø—Ä–µ–¥—ã–¥—É—â–µ–≥–æ stage
COPY --from=deps /app/node_modules ./node_modules

# –ö–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ –∏—Å—Ö–æ–¥–Ω–æ–≥–æ –∫–æ–¥–∞
COPY apps/DXB-frontend-develop/ .

# –°–±–æ—Ä–∫–∞ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è
RUN npm run build

# ================================
# Stage 3: Production (Minimal)
# ================================
FROM nginx:1.25-alpine AS production

# –ú–µ—Ç–∞–¥–∞–Ω–Ω—ã–µ
LABEL maintainer="kbalodk@gmail.com"
LABEL description="Dubai MVP Frontend - Optimized Production"
LABEL version="2.0.0"

# –ö–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ —Å–æ–±—Ä–∞–Ω–Ω–æ–≥–æ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è
COPY --from=builder --chown=nginx:nginx /app/dist /usr/share/nginx/html

# –ö–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ –æ–ø—Ç–∏–º–∏–∑–∏—Ä–æ–≤–∞–Ω–Ω–æ–π –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏ nginx
COPY apps/DXB-frontend-develop/nginx.conf /etc/nginx/conf.d/default.conf

# –£–¥–∞–ª–µ–Ω–∏–µ –¥–µ—Ñ–æ–ª—Ç–Ω–æ–π –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏
RUN rm -f /etc/nginx/conf.d/default.conf.bak

# –°–æ–∑–¥–∞–Ω–∏–µ –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏–π –¥–ª—è nginx —Å –ø—Ä–∞–≤–∏–ª—å–Ω—ã–º–∏ –ø—Ä–∞–≤–∞–º–∏
RUN mkdir -p /var/cache/nginx /var/log/nginx /var/run \
    && chown -R nginx:nginx /var/cache/nginx /var/log/nginx /var/run \
    && chown -R nginx:nginx /usr/share/nginx/html \
    && chmod -R 755 /usr/share/nginx/html \
    && touch /var/run/nginx.pid \
    && chown nginx:nginx /var/run/nginx.pid

# –ë–µ–∑–æ–ø–∞—Å–Ω–æ—Å—Ç—å: —É–¥–∞–ª–µ–Ω–∏–µ –Ω–µ–Ω—É–∂–Ω—ã—Ö –ø–∞–∫–µ—Ç–æ–≤
RUN apk del apk-tools

# –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å
USER nginx

# –ü–æ—Ä—Ç
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost/ || exit 1

# –ö–æ–º–∞–Ω–¥–∞ –∑–∞–ø—É—Å–∫–∞
CMD ["nginx", "-g", "daemon off;"]

# ================================
# Stage 4: Final (Default)
# ================================
FROM production AS final
