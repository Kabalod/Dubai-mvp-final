# ========================================
# PROJECT LAUNCHER ENVIRONMENT VARIABLES
# ========================================

# ========================================
# Основные настройки
# ========================================
ENVIRONMENT=development
LOG_LEVEL=info
DEBUG=true

# ========================================
# Порты сервисов
# ========================================
PROJECT_LAUNCHER_PORT=8000
FRONTEND_PORT=3000
DB_PORT=5434
REDIS_PORT=6378
PROMETHEUS_PORT=9091
GRAFANA_PORT=3002
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601
NGINX_PORT=80

# ========================================
# База данных
# ========================================
DATABASE_URL=postgresql://launcher:launcher@project-launcher-db:5432/launcher
POSTGRES_DB=launcher
POSTGRES_USER=launcher
POSTGRES_PASSWORD=launcher

# ========================================
# Redis
# ========================================
REDIS_URL=redis://project-launcher-redis:6379
REDIS_PASSWORD=

# ========================================
# Безопасность
# ========================================
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ========================================
# Docker настройки
# ========================================
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_TLS_VERIFY=false
DOCKER_CERT_PATH=

# ========================================
# Мониторинг
# ========================================
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ELASTICSEARCH_ENABLED=true
KIBANA_ENABLED=true

# ========================================
# Grafana
# ========================================
GRAFANA_PASSWORD=admin
GRAFANA_ADMIN_USER=admin

# ========================================
# Elasticsearch
# ========================================
ELASTICSEARCH_CLUSTER_NAME=project-launcher
ELASTICSEARCH_NODE_NAME=project-launcher-node

# ========================================
# Логирование
# ========================================
LOG_FORMAT=json
LOG_RETENTION_DAYS=30
LOG_MAX_SIZE_MB=100

# ========================================
# Мониторинг проектов
# ========================================
PROJECTS_CONFIG_PATH=./configs/projects
TEMPLATES_PATH=./configs/templates
ENVIRONMENTS_PATH=./configs/environments

# ========================================
# Backup
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./backups

# ========================================
# CI/CD
# ========================================
CI_CD_ENABLED=true
AUTO_DEPLOY=false
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# ========================================
# Уведомления
# ========================================
NOTIFICATIONS_ENABLED=true
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=

# ========================================
# Производительность
# ========================================
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=30
KEEP_ALIVE_TIMEOUT=5

# ========================================
# Кэширование
# ========================================
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# ========================================
# CORS
# ========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# ========================================
# SSL/TLS (для production)
# ========================================
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=
SSL_CA_PATH=

# ========================================
# Внешние интеграции
# ========================================
# GitHub
GITHUB_TOKEN=
GITHUB_WEBHOOK_SECRET=

# Docker Hub
DOCKER_HUB_USERNAME=
DOCKER_HUB_PASSWORD=

# AWS (если используется)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# ========================================
# Тестирование
# ========================================
TESTING_ENABLED=true
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5433/test_db
TEST_REDIS_URL=redis://localhost:6379/1

# ========================================
# Development
# ========================================
RELOAD_ENABLED=true
HOT_RELOAD=true
DEBUG_TOOLBAR_ENABLED=true

# ========================================
# Production overrides
# ========================================
# В production измените эти значения:
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=warn
# SSL_ENABLED=true
# CORS_ALLOWED_ORIGINS=https://yourdomain.com
# SECRET_KEY=your-production-secret-key
# DATABASE_URL=postgresql://prod_user:prod_pass@prod_host:5432/prod_db
