# Django-ready Dockerfile for Railway
# Uses pre-built Django environment

FROM python:3.11-slim

WORKDIR /app

# Copy application files
COPY apps/realty-main/ .

# Install Django and basic dependencies
RUN pip install --no-cache-dir Django djangorestframework

# Environment
ENV DJANGO_SETTINGS_MODULE=realty.settings
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV PORT=8000

EXPOSE 8000

# Run Django
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]
