{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.frontend.optimized",
    "buildTimeout": 1800
  },
  "deploy": {
    "startCommand": "nginx -g 'daemon off;'",
    "healthcheckPath": "/",
    "healthcheckTimeout": 600,
    "healthcheckInitialDelaySeconds": 60,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "deploymentTimeout": 1800
  },
  "variables": {
    "NODE_ENV": "production",
    "NPM_CONFIG_TIMEOUT": "300000"
  }
}
